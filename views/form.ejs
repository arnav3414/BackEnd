<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Signup Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            position: relative;
            width: 800px; /* Width to fit both forms side by side */
            height: 500px;
            overflow: hidden;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            display: flex;
        }
        .form-box {
            width: 50%;
            padding: 40px;
            box-sizing: border-box;
            background: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 2;
            position: relative;
        }
        .login-box {
            order: 1; /* Login form on the left */
        }
        .signup-box {
            order: 2; /* Sign-Up form on the right */
        }
        .form-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 50%;
            height: 100%;
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            z-index: 3;
            transition: transform 0.6s ease-in-out;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: #fff;
        }
        .overlay-content {
            padding: 40px;
        }
        .overlay-content h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }
        .overlay-content p {
            margin-bottom: 30px;
        }
        .overlay-content button {
            width: 200px;
            padding: 15px;
            background: #fff;
            color: #6a11cb;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-size: 16px;
            transition: background 0.3s ease, transform 0.3s ease;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }
        .overlay-content button:hover {
            background: #dcdcdc;
            transform: scale(1.05);
        }
        input {
            width: 100%;
            padding: 15px;
            margin: 15px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }
        button {
            width: 100%;
            padding: 15px;
            background: #6a11cb;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 20px;
            font-size: 16px;
            transition: background 0.3s ease;
        }
        button:hover {
            background: #2575fc;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-box login-box">
            <h2>Login</h2>
            <form action="/login" method="POST">
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <button type="submit">Login</button>
            </form>
        </div>
        <div class="form-box signup-box">
            <h2>Sign Up</h2>
            <form action="/signup" method="POST">
                <input type="text" name="username" placeholder="Username" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <button type="submit">Sign Up</button>
            </form>
        </div>
        <div class="form-overlay">
            <div class="overlay-content">
                <h2 id="overlay-title">Hello, Friend!</h2>
                <p id="overlay-text">Enter your personal details and start your journey with us</p>
                <button id="toggle-button">Login</button>
            </div>
        </div>
    </div>
    <script>
        const overlay = document.querySelector('.form-overlay');
        const toggleButton = document.getElementById('toggle-button');
        const overlayTitle = document.getElementById('overlay-title');
        const overlayText = document.getElementById('overlay-text');

        toggleButton.addEventListener('click', function() {
            if (overlay.style.transform === 'translateX(100%)') {
                overlay.style.transform = 'translateX(0)';
                toggleButton.textContent = 'Login';
                overlayTitle.textContent = 'Hello, Friend!';
                overlayText.textContent = 'Enter your personal details and start your journey with us';
                
            } else {
                overlay.style.transform = 'translateX(100%)';
                toggleButton.textContent = 'Sign UP';
                overlayTitle.textContent = 'Welcome Back!';
                overlayText.textContent = 'To keep connected with us please login with your personal info';
               
            }
        });
    </script>
</body>
</html>
